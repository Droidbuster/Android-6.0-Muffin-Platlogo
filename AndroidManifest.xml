<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androstarkplatlogo.droidbusterxda"
    android:versionCode="1"
    android:versionName="1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <supports-screens android:anyDensity="true" />
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
    >
        <activity
                 android:theme="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen"
            android:name="com.androstarkplatlogo.droidbusterxda.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                 android:theme="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen"
            android:name="com.androstarkplatlogo.droidbusterxda.Fullplatemuffin"
            android:label="@string/title_activity_fullplatemuffin" >
        </activity>
        <activity
            android:theme="@style/AppBaseTheme"
            android:name="com.androstarkplatlogo.droidbusterxda.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
